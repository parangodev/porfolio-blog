---
import BlogItemList from "../components/BlogItemList.astro";
import Calendar from "../components/icons/Calendar.astro";
//const postList = await Astro.glob("../pages/post/*.md");
const { posts } = Astro.props;
const postList = posts
console.log(postList);
---

{
  postList.map((post) => (
    <BlogItemList class="">
      <article>
        <a href={post.slug}>
          <h3 class="text-lg font-bold text-secondary ">{post.data.title}</h3>
          <div class="flex flex-row items-center space-x-4">
            <span>
              <Calendar class="size-3 md:size-6" />
            </span>{" "}
            <span class="text-[#9DB2BF text-sm">
              {" "}
              {post.data.pubDate}
            </span>
          </div>
          <div class="flex flex-wrap gap-4 mt-2">
            <p class="flex-1">{post.data.description}</p>
          </div>
        </a>
        {post.data.tags.map((tag: string) => (
          <a
            href="#"
            class="inline-block px-4 py-2 mt-2 mr-2 text-sm text-white transition bg-gray-800 rounded-full hover:scale-110 hover:bg-white/10 "
          >
            {tag}
          </a>
        ))}
      </article>
    </BlogItemList>
  ))
}
